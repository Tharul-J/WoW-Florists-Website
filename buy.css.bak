.main {
	padding: 30px;
	margin-top: 150px;
	
  }

* {
	padding: 0;
	margin: 0;
	box-sizing: border-box;
} 
  
  body {
    font-family: sans-serif;
    background-image:url("bg.jpg");
	background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    margin: 0;
    padding: 0;
    font-family: Arial, sans-serif;
}
  
  
 .fix {
	position: fixed; /* Set the navbar to fixed position */ 
	top: 0; /* Position the navbar at the top of the page */
    width: 100%; /* Full width */
  }
  
 .header {
	display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 10px;
    margin-left: 0px;
	background-color: #FAF8F9;
  }
  
 .space {
	margin-right: 40px;
  }
  
 .logo {
	margin-left: 30px;	 
 }

 .search-bar {
    flex: 1;
    margin-left: 80px; /* Adjust spacing between logo and search bar */
  }

 .search-input {
    width: 75%;
    padding: 8px;
    font-size: 13px;
    border: 2px solid #959193;
    border-radius: 4px;
    box-sizing: border-box;
  }

 .search-button {
    padding: 8px 20px;
    font-size: 16px;
    background-color: #C1427D;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }
 
.menu-bar {
	background: #C1427D;
	text-align: center;
	font-size: 13px;
}

.menu-bar ul {
	display: inline-flex;
	list-style: none;
	color: #fff;
}	

.menu-bar ul li {
	width: 170px;
	margin: 5px;
	padding: 15px;
}

.menu-bar ul li a {
	text-decoration: none;
	color: #fff;
}

.active, .menu-bar ul li:hover {
	background-color: #A4054F;
	border-radius: 5px;
}

.menu-bar .fa {
	margin-right: 8px;
}

.sub-menu-1 {
	display: none;
}

.sub-menu-1 ul li a {
    color: black;
}

.menu-bar ul li:hover .sub-menu-1 {
	display: block;
	position: absolute;
	background: #F8EBF1;
	margin-top: 15px;
	margin-left: -5px;
}

.menu-bar ul li:hover .sub-menu-1 ul {
	display: block;
	margin: 10px;
	color: black;
}

.menu-bar ul li:hover .sub-menu-1 ul li {
	width: 150px;
	padding: 10px;
	border-bottom: 1px dotted #fff;
	background: transparent;
	border-radius: 0;
	text-align: left;
}

.menu-bar ul li:hover .sub-menu-1 ul li:last-child {
	border-bottom: none;
}

.menu-bar ul li:hover .sub-menu-1 ul li a:hover {
	color: pink;
}

.fa-angle-right {  
	float: right; 
}

.sub-menu-2 {
	display: none;
}

.hover-me:hover .sub-menu-2 {
	position: absolute;
	display: block;
	margin-top: -20px;
	margin-left: 140px;
	background: #F8EBF1;
}
  
	

	
.b , .bb{
	width:25%;
	padding:10px 8px;
	margin:8px 0;
	box-sizing:border-box;
} 

.b{
	border-radius:10px;
	border-color:#C1427D;
	color:#C1427D;
	font-size:16px;
	font-weight:bold;
	cursor:pointer;
}

 
.bb{
	color:white;
	border-radius:10px;
	font-size:16px;
	font-weight:bold;
	background-color:#C1427D;
	cursor:pointer;}

.bb:hover{
	background-color:#cd6596;}


.qty{
	cursor:pointer;
	width: 40px;
    height: 40px;
	font-size: 16px;
	border-radius:10px;
	border:1px solid #ccc;
	font-size:16px;
	font-weight:bold;}

.footer-subscribe {
    margin-top: 20px;
	background-color: #b9037b;
	background: rgba(185, 3, 123, 0.08);
    color: #3B3B3B;
	padding: 60px 0px 70px;
	text-align: center;
	font-family:lucida sans unicode;
	font-size: 14px;
}
		
.footer-subscribe input[type="email"] {
    padding: 10px;
    width: 400px;
    border: none;
    border-radius: 5px;
}
		
.footer-subscribe input[type="submit"] {
    padding: 10px 20px;
    background-color: #b9037b;
	color:#ffffff;
	font-weight:bold;
	border: none;
	border-radius: 5px;
	cursor: pointer;
	font-size: 13px;
}

footer {
    background-color: #b9037b;
    color: white;
    text-align: center;
    position: relative;
    bottom: 0;
    width: 100%;
	font-family: sans-serif;
	font-size: 14px;
}

footer a {
    color: white;
    text-decoration: none;
    padding: 0 10px;
}
        
footer a:hover {
    color: black;
}
        
.footer-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
	flex-wrap: wrap;
    max-width: 1600px;
    margin: 0 auto;
	font-family:lucida sans unicode;

}
        
.footer-section {
    flex: 1;
    padding: 40px;
    text-align: left;
    line-height: 1.9;
}
        
/* Media query for responsiveness */
@media (max-width: 768px) {
.footer-section {
    flex: 100%;
    text-align: center;
    }
}

	